// Enum for asset types
enum AssetType {
  IMAGE
  TEXT
  ICON
}

// Category model
model Category {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String    @unique
  templates Template[]
}

// Template model
model Template {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  img              String              
  width            Int
  height           Int
  backgroundColor  String
  categoryId       String     @db.ObjectId
  category         Category   @relation(fields: [categoryId], references: [id])
  assets           Asset[]
}

// Asset model
model Asset {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  templateId  String   @db.ObjectId
  template    Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  type        AssetType
  label       String
  url         String?  // Used only for IMAGE and ICON types
  positionX   Int
  positionY   Int
  width       Int?
  height      Int?
  defaultText String?  // Used only for TEXT type
  fontSize    Int?     // Used only for TEXT type
  color       String?  // Used only for TEXT type
  fontFamily  String?  // Used only for TEXT type
  fontWeight  String?  // Used only for TEXT type
}

